<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hostelData_image"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:contentDescription="@string/image_of_the_hostel"
                app:srcCompat="@drawable/img_1" />

            <TextView
                android:id="@+id/hostelData_hostelName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/hosteldata_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hostelData_hostelAddress"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="@string/hosteldata_hostel_address"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="@string/hosteldata_rooms_available"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hostelData_no_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosteldata_no_of_rooms"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosteldata_floors_available"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hostelData_no_floors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosteldata_no_of_floors"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosteldata_extra_facilities"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hostelData_extras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosteldata_extra_details"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>